<div class="table-scrollable">
    <table class="table table-striped table-hover table-bordered">
        <thead>
        <tr>
        {% for header in headers %}
            <th>
                {{ header['value']|trans }}
                {% if header['ordering'] %}
                    <a href="" data-type="asc" data-field="{{ header['real'] }}">ASC</a>
                    |
                    <a href="" data-type="desc" data-field="{{ header['real'] }}">DESC</a>
                {% endif %}
            </th>
        {% endfor %}
        </tr>
        </thead>

        <tbody>


        {% for dataRow in data %}
            <tr>
                {%  for dataItem in dataRow %}
                    {{  include(
                    'ITDoorsCommonBundle:BaseTable:BaseTableRow.html.twig',
                        {
                            item: dataItem
                        }
                    )
                    }}
                {% endfor %}
            </tr>
        {% endfor %}

        </tbody>
    </table>
</div>
