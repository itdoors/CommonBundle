<div class="table-scrollable">
    <table class="table table-striped table-hover table-bordered">
        <thead>
        <tr>
        {% for header in headers %}
            <th>{{ header|trans }}</th>
        {% endfor %}
        </tr>
        </thead>

        <tbody>


        {% for dataRow in data %}
            <tr>
                {%  for dataItem in dataRow %}
                    {{  include(
                    'ITDoorsCommonBundle:BaseTable:BaseTableRow.html.twig',
                        {
                            item: dataItem
                        }
                    )
                    }}
                {% endfor %}
            </tr>
        {% endfor %}

        </tbody>
    </table>
</div>
