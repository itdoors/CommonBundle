
<div class="table-scrollable">
    {{ holder }}
    <table class="table table-striped table-hover table-bordered">
        <thead>
        <tr>
        {% for header in headers %}
            <th>
                {{ header['value']|trans }}
                {% if header['ordering'] %}
                    {{ ajax_ordering(header['real'], namespace, {
                    (holder) : 'ITDoorsAjax.updateList'
                    }) }}
                {% endif %}
            </th>
        {% endfor %}
        </tr>
        </thead>

        <tbody>

        {% for dataRow in data %}
            <tr>
                {%  for dataItem in dataRow %}
                    {{  include(
                    'ITDoorsCommonBundle:BaseTable:BaseTableRow.html.twig',
                        {
                            item: dataItem
                        }
                    )
                    }}
                {% endfor %}
            </tr>
        {% endfor %}

        </tbody>
    </table>
</div>
